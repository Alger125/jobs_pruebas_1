<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:batch="http://www.springframework.org/schema/batch"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch-2.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<batch:job id="job1">
		<batch:step id="step1">
			<batch:tasklet>
                <batch:chunk reader="customerReader" writer="consoleWriter" commit-interval="2" />
			</batch:tasklet>
		</batch:step>
	</batch:job>

	<bean id="customerReader" class="org.springframework.batch.item.file.FlatFileItemReader">
		<property name="resource" value="file:C:/Users/JimzL/Desktop/clientes_bancomer.csv" />
		<property name="lineMapper">
			<bean class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
				<property name="lineTokenizer">
					<bean class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
						<property name="names" value="id,nombre,apellido,monto" />
					</bean>
				</property>
				<property name="fieldSetMapper">
					<bean class="org.springframework.batch.item.file.mapping.BeanWrapperFieldSetMapper">
						<property name="targetType" value="com.apress.springbatch.chapter2.Customer" />
					</bean>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="consoleWriter" class="com.apress.springbatch.chapter2.LogItemWriter" />

</beans>